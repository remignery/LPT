<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teaminu.lpt">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".viewModel" />
        <activity
            android:name=".TableActivity"
            android:label="@string/title_activity_table"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".PlayerActivity" />
        <activity android:name=".CardsActivity" />
        <activity android:name=".NumpadActivity" />
        <activity android:name=".ConfigActivity" />
        <activity android:name=".MiscSetupActivity" />
        <activity android:name=".GameSelActivity" />
        <activity android:name=".SessionsActivity" />
        <activity android:name=".PlayersActivity" />
        <activity android:name=".DealerActivity" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>